                        <!-- <apex:pageBlock rendered="{!Candidate__c.Name!=null}"> -->
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  div-heading div-heading-padding">Other Info</div>  
